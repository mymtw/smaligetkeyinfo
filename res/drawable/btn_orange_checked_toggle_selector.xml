<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="?colorControlHighlight"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_orange_disabled" />
                </shape>
            </item>
            <item android:state_checked="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_orange" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/divider_height" android:color="@color/button_orange" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>