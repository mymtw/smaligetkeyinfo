<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="?rippleOnSurface"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="25.0sp" />
            <solid android:color="@color/clg_color_bubblegum" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25.0sp" />
            <stroke android:width="2.0dip" android:color="?clg_color_actiongroup_outline" />
        </shape>
    </item>
    <item>
        <selector android:enterFadeDuration="150" android:exitFadeDuration="150">
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <corners android:radius="25.0sp" />
                    <stroke android:width="2.0dip" android:color="?clg_color_actiongroup_circle_selected" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>