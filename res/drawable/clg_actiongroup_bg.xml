<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="?rippleOnSurface"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <inset android:inset="2.0dip">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/clg_button_cap_radius" />
                <solid android:color="@color/clg_color_bubblegum" />
            </shape>
        </inset>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/clg_button_cap_radius" />
            <stroke android:width="2.0dip" android:color="?clg_color_actiongroup_outline" />
        </shape>
    </item>
    <item>
        <selector android:enterFadeDuration="150" android:exitFadeDuration="150">
            <item android:state_checked="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/clg_button_cap_radius" />
                    <stroke android:width="2.0dip" android:color="?clg_color_actiongroup_circle_selected" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>