<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="?rippleOnSurface"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <inset android:insetTop="@dimen/clg_space_4" android:insetBottom="@dimen/clg_space_4">
            <shape android:shape="rectangle">
                <solid android:color="?clg_color_interaction_button_tertiary" />
                <corners android:radius="25.0sp" />
                <solid android:color="@color/clg_color_bubblegum" />
            </shape>
        </inset>
    </item>
    <item>
        <inset android:insetTop="@dimen/clg_space_4" android:insetBottom="@dimen/clg_space_4">
            <shape android:shape="rectangle">
                <corners android:radius="25.0sp" />
                <solid android:color="?clg_color_interaction_button_tertiary" />
            </shape>
        </inset>
    </item>
    <item>
        <selector android:enterFadeDuration="150" android:exitFadeDuration="150">
            <item android:state_selected="true">
                <inset android:insetTop="@dimen/clg_space_4" android:insetBottom="@dimen/clg_space_4">
                    <shape android:shape="rectangle">
                        <corners android:radius="25.0sp" />
                        <solid android:color="?clg_color_interaction_button_tertiary" />
                        <stroke android:width="2.0dip" android:color="?clg_color_text_primary" />
                    </shape>
                </inset>
            </item>
            <item android:state_selected="false">
                <inset android:insetTop="@dimen/clg_space_4" android:insetBottom="@dimen/clg_space_4">
                    <shape android:shape="rectangle">
                        <corners android:radius="25.0sp" />
                        <solid android:color="?clg_color_interaction_button_tertiary" />
                    </shape>
                </inset>
            </item>
        </selector>
    </item>
</ripple>